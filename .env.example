# .env.example

# --- Django Core Settings ---
# IMPORTANT: Generate a new, random key for your actual .env file
# You can use an online generator or Django's `get_random_secret_key()` function
SECRET_KEY=your_secret_key_goes_here
DEBUG=True

# --- Local PostgreSQL Database Connection ---
# These variables are used by docker-compose.yml and settings.py for local development
POSTGRES_DB=fasolink_db
POSTGRES_USER=fasolink_user
POSTGRES_PASSWORD=password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# --- Production Database (Optional for local, but good to have) ---
# This is the variable Render will use. You can leave it blank locally
# or paste your Render URL here for local testing against the production DB.
DATABASE_URL=