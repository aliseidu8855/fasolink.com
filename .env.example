# .env (Backend â€“ Django/DRF)

# --- Core ---
SECRET_KEY=change-me
DEBUG=0
ALLOWED_HOSTS=api.example.com
CORS_ALLOWED_ORIGINS=https://app.example.com

# --- Security Headers ---
SECURE_SSL_REDIRECT=1
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=1
SECURE_HSTS_PRELOAD=1
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
X_FRAME_OPTIONS=DENY

# --- Upload & Request Limits ---
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760
DATA_UPLOAD_MAX_NUMBER_FIELDS=1000
MAX_ATTACHMENT_SIZE_MB=5
MAX_MESSAGE_ATTACHMENTS=5
ALLOWED_ATTACHMENT_EXTENSIONS=jpg,jpeg,png,webp,pdf
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp

# --- DRF Throttles ---
DRF_THROTTLE_ANON=300/min
DRF_THROTTLE_USER=1000/min
DRF_THROTTLE_RUM=60/min
DRF_THROTTLE_LOGIN=20/min

# --- Telemetry / RUM ---
RUM_INGEST_KEY=change-me

# --- Database & Cache ---
DATABASE_URL=postgres://user:pass@host:5432/dbname?sslmode=require
REDIS_URL=redis://:password@host:6379/0

# --- Cloudinary (media storage) ---
CL0UDINARY_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET_KEY=your_api_secret
# CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>

# --- Web Push (VAPID) ---
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
# .env.example

